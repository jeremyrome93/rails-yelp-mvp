<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<h3>All Reviews for <%= @restaurant.name%></h3>
<ul>
<% @restaurant.reviews.each do |review| %>
<li><%= review.content %></li>
<% end %>
</ul>

<%# <%= link_to "Add a review",  new_restaurant_review_path(@restaurant) %>




<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>

<h1>Welcome to the review page for <%= @restaurant.name %> </h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
<%= f.input :content %>
<%= f.input :rating %>

<%= f.submit "Submit review", class: "btn-primary" %>
<% end %>
